<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<EditText
    android:id="@+id/old_pw"
    android:hint="@string/old_pw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<EditText
    app:layout_constraintTop_toBottomOf="@+id/old_pw"
    android:layout_marginTop="10dp"
    android:hint="@string/new_pw"
    android:id="@+id/new_pw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <RadioGroup
        app:layout_constraintTop_toBottomOf="@+id/new_pw"
        android:id="@+id/usr_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/admin"
            android:text="@string/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="@string/user"
            android:checked="true"
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>