<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ecc_verify_hash"
        android:textColor="#FF00AA"
        android:hint="请输入Hash值"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ecc_verify_hash"
        android:id="@+id/ecc_verify_puk"
        android:hint="请输入公钥值"
        android:textColor="#4fc4b4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="请输入签名值"
        android:layout_marginTop="30dp"
        android:textColor="#9e671f"
        app:layout_constraintTop_toBottomOf="@+id/ecc_verify_puk"
        android:id="@+id/ecc_verify_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>