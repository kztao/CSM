<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/create_file_name"
        android:hint="请输入文件名称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/create_file_name"
        android:id="@+id/create_file_size"
        android:hint="请输入文件初始大小"
        android:digits="0123456789"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        app:layout_constraintTop_toBottomOf="@+id/create_file_size"
        android:entries="@array/right"
        android:id="@+id/create_file_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <Spinner
        app:layout_constraintTop_toBottomOf="@+id/create_file_read"
        android:layout_marginTop="10dp"
        android:entries="@array/right"
        android:id="@+id/create_file_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>


</android.support.constraint.ConstraintLayout>